
@{
    ViewData["Title"] = "ViewDataCalc";
    var value1 = ViewData["Value1"];
    var value2 = ViewData["Value2"];
    var add = Convert.ToInt32(value1) + Convert.ToInt32(value2);
    var sub = Convert.ToInt32(value1) - Convert.ToInt32(value2);
    var mult = Convert.ToInt32(value1) * Convert.ToInt32(value2);
    var div = Convert.ToInt32(value1) / Convert.ToInt32(value2);
}

<h2>ViewDataCalc</h2>
<div>Первое число: @value1</div>
<div>Второе число: @value2</div>
<div>Сумма: @value1 + @value2 = @add</div>
<div>Разность: @value1 - @value2 = @sub</div>
<div>Умножение: @value1 * @value2 = @mult</div>
<div>Деление: @value1 / @value2 = @div</div>